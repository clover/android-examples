<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="@string/cardholder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/order_table_text_size"
        android:textStyle="bold"
        android:id="@+id/PreAuthNameColumn"
        android:layout_weight="2"/>
    <TextView
        android:text="@string/payment_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/table_tertiary_text_size"
        android:id="@+id/PreAuthAmountColumn"
        android:layout_weight="2"
        android:textColor="@color/secondary_table_text_color"
        android:layout_toEndOf="@+id/textView4"
        android:layout_alignBaseline="@+id/textView4"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/textView4"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amount"
        android:id="@+id/textView4"
        android:textSize="@dimen/table_secondary_text_size"
        android:textColor="@color/secondary_table_text_color"
        android:layout_below="@+id/PreAuthNameColumn"
        android:layout_alignParentStart="true"/>
</RelativeLayout>