<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/rootLayout"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".NativePOSActivity"
    android:columnCount="1"
    android:rowCount="4">
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:gravity="center_vertical"
      android:orientation="vertical"
      android:id="@+id/TopPanel">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">
      <ImageButton
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginRight="20dp"
          android:src="@drawable/ic_home"
          android:background="@android:color/transparent"
          android:scaleType="fitCenter"
          android:onClick="showHome"/>
      <TextView
          android:id="@+id/ConnectionStatusLabel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/disconnected"
          android:layout_gravity="fill_horizontal|center_vertical"
          android:layout_weight="2"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/clover_green"/>
  </LinearLayout>
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/contentContainer"
      android:layout_below="@+id/TopPanel"
      android:layout_above="@+id/Divider"/>
  <View
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:background="@android:color/holo_blue_light"
      android:layout_above="@+id/BottomPanel"
      android:id="@+id/Divider"/>
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/BottomPanel"
      android:layout_alignParentBottom="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="@string/device_status"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_status"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/DeviceOptionsPanel">
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/DeviceStatus"
        android:text="@string/unknown"
        android:textSize="@dimen/text_size_status"/>
  </LinearLayout>
</RelativeLayout>