<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginBottom="20sp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/vaulted_cards_associated_w_customers"
        android:layout_weight="0"
        android:textSize="@dimen/order_table_text_size"
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:padding="3dp"/>
    <View
        android:id="@+id/CardDivider"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_below="@id/textView3"
        android:background="@color/clover_green"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/CardsListView"
        android:layout_below="@+id/CardDivider"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button"/>
    <Button
        android:id="@+id/VaultNewCardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vault_new_card"
        android:background="@drawable/button_border_padding"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>