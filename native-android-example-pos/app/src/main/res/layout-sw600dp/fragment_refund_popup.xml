<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:minHeight="150dp"
    android:minWidth="450dp"
    android:padding="10dp">
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:text="@string/payment_refund"
      android:layout_marginBottom="15dp"
      android:textSize="24dp"/>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:orientation="horizontal"
      android:layout_marginBottom="10dp">
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/enter_refund_amount"
      android:textSize="18dp"/>
    <EditText
        android:id="@+id/PaymentRefundAmount"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="@string/_0_dollars"/>
  </LinearLayout>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:orientation="horizontal">
    <Button
        android:id="@+id/MakeFullRefund"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border_padding"
        android:text="@string/make_full_refund"
        android:layout_marginEnd="5dp"/>
    <Button
        android:id="@+id/MakePartialRefund"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border_padding"
        android:text="@string/make_partial_refund"/>
  </LinearLayout>
</LinearLayout>